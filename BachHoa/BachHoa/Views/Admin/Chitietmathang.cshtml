@model BachHoa.Models.MatHang

@{
    ViewBag.Title = "Chitietmathang";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thông tin chi tiết</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên loại hàng:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LoaiHang.TenLoaiHang)
        </dd>

        <dt>
            Tên mặt hàng:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenHang)
        </dd>

        <dt>
            Số lượng:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoLuong)
        </dd>

        <dt>
            Trạng thái:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TrangThai)
        </dd>

        <dt>
            Đơn giá: 
        </dt>

        <dd>
            @String.Format("{0:0,0}", Model.DonGia) VND
        </dd>

        <dt>
            Hình ảnh:
        </dt>

        <dd>
            <img src="@Url.Content("~/HinhAnh/HinhAnh(MatHang)/"+Model.HinhAnh)" width="120px"/>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Điều chỉnh", "Suamathang", new { id = Model.MSMH }) |
    @Html.ActionLink("Trở về", "MatHang")
</p>
