@model BachHoa.Models.MatHang

@{
    ViewBag.Title = "Xoamathang";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xác nhận thông tin mặt hàng cần xóa</h2>

<h3>Bạn quyết định xóa mặt hàng này?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên loại hàng:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LoaiHang.TenLoaiHang)
        </dd>

        <dt>
            Tên mặt hàng:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenHang)
        </dd>

        <dt>
            Số lượng:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoLuong)
        </dd>

        <dt>
            Trạng thái:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TrangThai)
        </dd>

        <dt>
            Đơn giá:
        </dt>

        <dd>
            @String.Format("{0:0,0}", Model.DonGia) VND
        </dd>

        <dt>
            Hình ảnh:
        </dt>

        <dd>
            <img src="@Url.Content("~/HinhAnh/HinhAnh(MatHang)/"+Model.HinhAnh)" width="120px" />
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Trở về", "MatHang")
        </div>
    }
</div>
