@using PagedList.Mvc;
@model PagedList.PagedList<BachHoa1.Models.LoaiHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="center_content">
    <h2 style="text-align: center">Quản lý thông tin loại hàng</h2>

    <p>
        @Html.ActionLink("Thêm mới", "Create")
    </p>
    <table class="table table-bordered">
        <tr class="info">
            <th style="width:200px">Tên loại hàng</th>
            <th style="width:200px">Hình ảnh</th>
            <th style="width:200px"> </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenLoaiHang)
                </td>
                <td>
                    <img src="@Url.Content("~/HinhAnh/HinhAnh(LoaiHang)/"+item.HinhAnh)" style=" max-height:120px" />
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.MSLH }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.MSLH }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.MSLH })
                </td>
            </tr>
        }

    </table>
    @*Tạo liên kết các trang*@
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount;
    <div class="MenuTrang">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
    </div>
    <style>
        .MenuTrang li {
            display: inline;
        }
    </style>
</div>