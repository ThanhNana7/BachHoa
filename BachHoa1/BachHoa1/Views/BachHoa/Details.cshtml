<style type="text/css">
    #Themgiohang a {
        clear: both;
        background-color: blueviolet;
        color: white;
        width: 120px;
        height: 35px;
        display: block;
        float: right;
        text-align: center;
        padding-top: 10px;
        text-decoration: none;
        font-weight: bold;
    }

        #Themgiohang a:hover {
            color: initial;
            background-color: gray;
        }
</style>
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h3 style="color:black">THÔNG TIN CHI TIẾT MẶT HÀNG</h3>

<div>
    <div style="width:40%; float:left; border-left:dotted 1px; border-color:azure">
        <img src="~/HinhAnh/HinhAnh(MatHang)/@Model.HinhAnh" style="max-height:120px" />
    </div>
    <div style="width:60%; float:left; padding:10px">
        <h4 style="font-weight:bold; color:red">Tên mặt hàng: @Model.TenHang</h4>
        <p style="font-weight:bold"> Đơn Giá: <span style="color:blue; font-size:20px"> @Model.DonGia VND </span></p>
    </div>
    <div id="Themgiohang">
        <a href="@Url.Action("AddToCard", "ShoppingCard", new{ id=@Model.MSMH})">
            THÊM VÀO GIỎ HÀNG
        </a>
    </div>
</div>