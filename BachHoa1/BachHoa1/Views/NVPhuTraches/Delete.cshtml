@model BachHoa1.Models.NVPhuTrach

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="center_content">

    <h3>Bạn có chắc muốn xóa nhân viên này?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Họ Tên:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.HoTen)
            </dd>

            <dt>
                Phái:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Phai)
            </dd>

            <dt>
                Ngày sinh:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NamSinh)
            </dd>

            <dt>
                Địa chỉ:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DiaChi)
            </dd>

            <dt>
                SĐT:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SDT)
            </dd>


        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Xóa" class="btn btn-default" /> |
                @Html.ActionLink("Quay lại", "Index")
            </div>
        }
    </div>
</div>